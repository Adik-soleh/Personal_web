  <!-- Form Project -->
  <form style="margin: 5px auto; 
                  background-color: rgb(255, 255, 255); 
                  margin-top: 7%;
                  border-radius: 8px;" action="/edit-project/{{blog.id}}" method="post" enctype="multipart/form-data"
    class="p-5">
    <h1 style="text-align: center;">EDIT PROJECT</h1>
    <div class="mb-3">
      <label for="title" class="form-label">Name Project</label>
      <input type="text" class="form-control" name="title" value="{{blog.title}}">
    </div>
    <div class="row ">
      <div class="col-auto w-50">
        <label for="sDate" class="form-label">First Date</label>
        <input type="date" class="form-control" name="sDate" value="{{blog.sDate}}">
      </div>
      <div class="col-auto w-50">
        <label for="eDate" class="form-label">End Date</label>
        <input type="date" class="form-control" name="eDate" value="{{blog.eDate}}">
      </div>
    </div>
    <div class="mb-3">
      <label for="content" class="form-label">Message</label>
      <textarea class="form-control" name="content" rows="3">{{blog.content}}</textarea>
    </div>
    <div class="row">
      <div class="mb-3 col-12">
        <div class="form-check form-check-inline">
          <input class="form-check-input " type="checkbox" name="Cbx1" value="Java">
          <label class="form-check-label m-2" for="Cbx1">Java</label>
        </div>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="checkbox" name="Cbx2" value="Js">
          <label class="form-check-label m-2" for="Cbx2">JavaScript</label>
        </div>
      </div>
      <div class="mb-3 col-auto">
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="checkbox" name="Cbx3" value="python">
          <label class="form-check-label m-2" for="Cbx3">python</label>
        </div>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="checkbox" name="Cbx4" value="Golang">
          <label class="form-check-label m-2" for="Cbx4">Golang</label>
        </div>
      </div>
    </div>
    <div class="mb-3">
      <label for="image" class="form-label">Upload Image</label>
      <input class="form-control" type="file" name="image" id="image">
    </div>
    <div class="mb3 text-end">
      <button class="btn btn-success" id="button">Edit</button>
    </div>
  </form>

